"rules": {
  "block-no-empty": true,
  "block-no-single-line": true,

  "comment-no-empty": [true, { "severity": "warning" }],
  "comment-empty-line-before": always,

  "color-no-hex": [true, {
    "message": "Illegal use of a HEX color. Instead of directly specifying a color, you should use variables to specify colors."
  }],

  "declaration-colon-space-after": "always",
  "declaration-colon-space-before": "never",
  "declaration-block-no-duplicate-properties": true,
  "declaration-block-trailing-semicolon": "always",

  "function-comma-space-after": "always",
  "function-url-quotes": ["never", { "severity": "warning" }],

  "media-feature-colon-space-after": "always",
  "media-feature-colon-space-before": "never",
  "media-feature-name-no-vendor-prefix": true,

  "property-blacklist": [ "font-size", {
    "message": "Illegal use of the font-size property. Instead of directly specifying a font-size, you should use the font-size mixin."
  } ],

  "max-empty-lines": [5, { "severity": "warning" }],
  "max-line-length": [100, { "severity": "warning" }],

  "number-leading-zero": "always",
  "number-no-trailing-zeros": [true, { "severity": "warning" }],

  "property-no-vendor-prefix": true,

  "selector-list-comma-space-before": "never",
  "selector-list-comma-newline-after": ["always", { "severity": "warning" }],
  "selector-no-id": true,

  "string-quotes": ["double", { "severity": "warning" }],

  "no-duplicate-selectors": true,
  "no-extra-semicolons": true,

  "indentation": tab,

  "value-no-vendor-prefix": [true, { "severity": "warning" }],
  "shorthand-property-no-redundant-values": true,

  "rule-nested-empty-line-before": ["always", {
    ignore: ["after-comment"]
  }],
}
